{
    "manifest_version": 3,
    "name": "Procrastination Blocker",
    "version": "1.0",
    "description": "Blocks all websites and redirects to a motivational page.",
    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ]
}
